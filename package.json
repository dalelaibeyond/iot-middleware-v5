{
  "name": "iot-middleware-v5",
  "version": "1.0.0",
  "description": "IoT Middleware v5 - Flexible, modular, event-driven architecture for handling IoT sensor data",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --testMatch='**/tests/integration/**/*.test.js'",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\""
  },
  "keywords": [
    "iot",
    "middleware",
    "mqtt",
    "sensor",
    "event-driven",
    "modular"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "mqtt": "^5.3.4",
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "mysql2": "^3.7.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "nodemon": "^3.1.7",
    "@eslint/js": "^9.15.0",
    "globals": "^15.12.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
